{{> post-render post }}

{{> comments-render post.comments}}
<div class="container-fluid" id="comment-container">
  <button class="comment-btn btn btn-secondary">Add Comment</button>
</div>
<div class="container-fluid" id="add-comment">
  <div class="card col-9 rounded comment-form-div">
    <form class="form comment-form">
      <div class="form-group">
        <label for="comment">Comment:</label>
        <input class="form-input" type="text" id="comment"/>
      </div>
      <div class="form-group">
        <button class="btn btn-secondary" type="submit">Add Comment</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/newComment.js"></script>